<%# COMMENT EDIT %>
<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 m-auto">
      <h1 class="text-primary display-4 mt-3 mb-3" >Edit Comment</h1>
      <form action="/campgrounds/<%= campground_slug %>/comments/<%= comment._id %>?_method=put" method="post">
        <div class="form-group">
          <label class="text-muted" for="comment-text">Add your third cent!</label>
          <textarea class="form-control" id="comment-text" name="comment[text]" ><%= comment.text %></textarea>
          <input class="btn btn-lg btn-primary btn-block mt-2" type="submit" value="Save Comment">
        </div>
        <div class="form-group">
        </div>
      </form>
      <form action="/campgrounds/<%= campground_slug %>/comments/<%= comment._id %>?_method=delete" method="post">
        <div class="form-group">
          <input class="btn btn-outline-danger" type="submit" value="Delete">
          <a class="btn btn-outline-secondary" href="javascript:history.back()">cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>