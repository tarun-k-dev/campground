<%# CAMPGROUNDS EDIT %>
<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 m-auto">
      <h1 class="text-primary display-4 mt-3 mb-3" >Edit Campground</h1>
      <form action="/campgrounds/<%= campground.slug %>?_method=put" method="post">
        <div class="form-group">
          <label class="text-muted" for="name">Campground name</label>
          <input class="form-control " type="text" name="campground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label class="text-muted" for="name">Price per night</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text">$</div>
            </div>
            <input class="form-control " type="number" name="campground[price]" value="<%= campground.price %>" min="0.00" step="0.01">
          </div>
        </div>
        <div class="form-group">
          <label class="text-muted" for="image">Enter the url of a picture of your campground</label>
          <input class="form-control" type="url" name="campground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label class="text-muted" for="description">Tell us about your campground</label>
          <textarea class="form-control" type="text" name="campground[description]"><%= campground.description %></textarea>
          <input class="btn btn-lg btn-primary btn-block mt-2" type="submit" value="Save">
        </div>
      </form>
      <form action="/campgrounds/<%= campground.slug %>?_method=delete" method="post">
        <div class="form-group">
          <input class="btn btn-outline-danger" type="submit" value="Delete">
          <a class="btn btn-outline-secondary" href="javascript:history.back()">cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>