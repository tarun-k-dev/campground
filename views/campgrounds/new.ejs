<%# CAMPGROUNDS NEW %>
<%- include('../partials/header') %>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-8 col-lg-6 m-auto">
      <h1 class="text-primary display-4 mt-3 mb-3" >Add a new campground</h1>
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <label class="text-muted" for="name">Campground name</label>
          <input class="form-control " type="text" name="name" placeholder="name">
        </div>
        <div class="form-group">
          <label class="text-muted" for="name">Price per night</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <div class="input-group-text">$</div>
            </div>
            <input class="form-control " type="number" name="price" placeholder="price" min="0.00" step="0.01">
          </div>
        </div>
        <div class="form-group">
          <label class="text-muted" for="image">Enter the url of a picture of your campground</label>
          <input class="form-control" type="url" name="image" placeholder="image url" value="https://source.unsplash.com/">
        </div>
        <div class="form-group">
          <label class="text-muted" for="description">Tell us about your campground</label>
          <textarea class="form-control" type="text" name="description" placeholder="How's the serenity ..."></textarea>
        </div>
        <div class="form-group">
          <input class="btn btn-lg btn-primary btn-block" type="submit" value="Add Campground">
          <a class="btn btn-light text-secondary mt-2" href="/campgrounds">cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('../partials/footer') %>